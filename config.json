{
    "app":"my-app",
    "sources": [
        {
            "type": "mysql",
            "backup_filename":"mysql_backup",
            "host":"0.0.0.0",
            "port":"3306",
            "username":"root",
            "password":"password",
            "database":"--all-databases",
            "all_databases": true,
            "mysql_dump_bin": "/usr/local/opt/mysql-client/bin/mysqldump"
        },
        {
            "type": "postgres",
            "backup_filename":"pg_backup",
            "host":"0.0.0.0",
            "port":"5432",
            "username":"postgres",
            "password":"password",
            "database":"db",
            "all_databases": true,
            "pg_dump_bin": "/usr/local/opt/libpq/bin/pg_dump",
            "pg_dumpall_bin": "/usr/local/opt/libpq/bin/pg_dumpall"
        },
        {
            "type": "files",
            "backup_filename":"config",
            "archive_type":"tar",
            "files": [
                "~/.vimrc",
                "~/.sqliterc",
                "~/.zshrc"
            ]
        }
    ],
    "destinations": [
        {
            "type": "s3",
            "name": "contabo",
            "endpoint_url": "https://eu2.contabostorage.com",
            "bucket": "bastien-antoine.fr.tests-backups",
            "path": "my-app",
            "group": true
        }
    ]
}